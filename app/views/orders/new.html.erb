<% title("New order") %>

<div id="cart-page">
  <%= error_messages_for :order %>

  <%= render :partial => "order_lines" %>

  <%= form_for @order do |f| %>
    <div id="delivery-address">
      <h3>Delivery address</h3>
      <p><%= link_to 'Read more on delivery.', delivery_home_path %></p><br />
      <%= f.fields_for :order_address do |ff| %>
        <%= ff.label :street %>: *<br />
        <%= ff.text_field :street, :style => "width: 100%" %><br />
        <%= ff.label :phone_number %>: *<br />
        <%= ff.text_field :phone_number, :size => 10 %><br />
        <%= ff.label :phone_number2 %>:<br />
        <%= ff.text_field :phone_number2, :size => 10 %><br />
      <% end %>
    </div>
    <p><small>* Required fields.</small></p>

    <p><%= f.label :notes %>:<br />
      <%= f.text_area :notes, :rows => 5, :style => "width: 100%" %></p>

    <p><%= submit_tag "Submit", :class => "button" %> or <%= link_to "Continue shopping", products_path %></p>
  <% end %>
</div>


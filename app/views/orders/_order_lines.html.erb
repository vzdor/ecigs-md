<table width="100%">
  <tr>
    <th width="5%">#</th>
    <th>Title</th>
    <th width="15%">Quantity</th>
    <th width="15%">Unit price</th>
    <th>Price</th>
  </tr>
  <% @order.order_lines.each do |ol| %>
    <tr>
      <% product = ol.product %>
      <% if ol.product.is_variation? %>
        <% product = product.product %>
      <% end %>
      <td><%= ol.product.id %></td>
      <td><%= link_to h(product.title), product %>
        <% if ol.product.is_variation? %>
          <br /><%= h(ol.product.title) %>
        <% end %>
      </td>
      <td><%= ol.quantity %></td>
      <td><%= product.price %></td>
      <td><%= ol.price %></td>
    </tr>
  <% end %>
  <tr>
    <td colspan="3"></td>
    <td>Delivery cost:</td>
    <td><%= @order.delivery_cost %></td>
  </tr>
  <tr>
    <td colspan="3"></td>
    <td>Total:</td>
    <td><%= @order.total_with_delivery %></td>
  </tr>
</table>

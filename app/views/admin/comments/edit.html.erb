<% admin_title "Edit comment" %>

<p style="margin-bottom: 10px;"><%= link_to @comment.commentable.title, commentable_path(@comment) %></p>

<div id="edit-comment">
  <%= form_for @comment, :url => admin_comment_path(@comment) do |f| %>
    <p><%= f.text_area :content, :size => "80x10", :style => "width: 100%" %></p>
    <%= submit_tag "Update" %>
  <% end %>
</div>

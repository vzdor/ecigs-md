<% if @products.empty? %>
  <%= title('404') %>
  <p>Not products found with that tag.</p>
<% elsif tag = params[:tag] %>
  <%= title h(tag) %>
<% end %>

<% if is_admin? %>
  <%= link_to "Add a new product", new_product_path %>
<% end %>

<div id="product-list">
  <% @products.each do |product| %>
    <div class="product">
      <div class="photo"><%= link_to image_tag(product.photo.url(:thumb)), product %></div>
      <h3><%= link_to h(product.title), product %></h3>
      <%= h(truncate(product.description, :length => 200)) %> <%= link_to 'More..', product %>
      <div class="cut"></div>
    </div>
  <% end %>
</div>

<%= paginate @products %>


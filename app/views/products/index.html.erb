<% title("Products") %>

<% if is_admin? %>
  <%= link_to "New product", new_product_path %>
<% end %>

<div id="product-list">
  <% @products.each do |product| %>
    <p><%= link_to h(product.title), product_path(product) %><br />
      <%= h(truncate(product.description)) %></p>
  <% end %>
</div>

<%= paginate @products %>

